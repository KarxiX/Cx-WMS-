    <update id="updateOrderSales" parameterType="OrderSales">
        update order_sales_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="sdId != null">sd_id = #{sdId},</if>
            <if test="sCode != null and sCode != ''">s_code = #{sCode},</if>
