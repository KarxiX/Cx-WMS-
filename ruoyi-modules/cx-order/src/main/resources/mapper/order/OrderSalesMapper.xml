        delete from order_sales_order where s_id = #{sId}
    </delete>

    <delete id="deleteOrderSalesBySIds" parameterType="String">
        delete from order_sales_order where s_id in
        <foreach item="sId" collection="array" open="(" separator="," close=")">
            #{sId}
        </foreach>
    </delete>
</mapper>